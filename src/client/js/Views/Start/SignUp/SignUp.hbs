    
    <form class="form" id="form-signup">
    
        <h2 class="form-signin-heading">{{l10n "Sign Up"}}</h2>

        <div class="alert alert-danger alert-dismissible" role="alert" style="display:none">
          <strong>{{l10n "Error"}}</strong> 
          <span class="detail"></span>
        </div>
        
        <div class="form-group username">
            <div class="form-label">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> {{l10n "User Name"}}
            </div>
            <input type="text" name="username" class="form-control">
			<span class="help-block"></span>
        </div>
        
        <div class="form-group email">
            <div class="form-label">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> {{l10n "Email Address"}}
            </div>
            <input type="text" name="email" class="form-control">
			<span class="help-block"></span>
        </div>
        
        <div class="form-group password">
            <div class="form-label">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> {{l10n "Password"}}
            </div>
            <input type="password" name="password" class="form-control">
			<span class="help-block"></span>
		</div>
        
        <div class="form-group password-confirm">
            <div class="form-label">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> {{l10n "Confirm Password"}}
            </div>
            <input type="password" name="password-confirm" class="form-control">
			<span class="help-block"></span>
		</div>
        
        <div class="spacer">
    
        </div>
        
        <div class="btn btn-lg btn-primary btn-block" id="btn-signup">{{l10n "Sign Up"}}</div>
        
    </form>
    
