    
    <form class="form" id="form-reset">
    
        <h2 class="form-reset-heading">{{l10n "Reset Password"}}</h2>

        <div class="alert alert-danger alert-dismissible" role="alert" style="display:none">
          <strong>{{l10n "Error"}}</strong> 
          <span class="detail"></span>
        </div>
        
        <div class="alert alert-info alert-dismissible" role="alert" style="display:none">
          <span class="detail"></span>
        </div>

        <div class="form-group email">
            <div class="form-label">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> {{l10n "Email Address"}}
            </div>
            <input type="text" name="email" class="form-control">
			<span class="help-block"></span>
        </div>
        
        <div class="spacer">
    
        </div>
        
        <div class="btn btn-lg btn-primary btn-block" id="btn-reset">{{l10n "Reset"}}</div>
        
    </form>
    
